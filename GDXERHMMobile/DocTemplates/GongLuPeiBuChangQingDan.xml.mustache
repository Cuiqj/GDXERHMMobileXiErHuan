<?xml version="1.0" encoding="UTF-8"?>
<pdf:template>
    {{! 公路赔(补)偿清单 }}
	<pdf:paper width="595.276" height="841.89" fontName="SimSun" fontSize="10" offset="0.5,-1"/>
	<pdf:content>
        <pdf:text point="top-left:53,24" fontSize="24">公 路 赔 （补） 偿 清 单</pdf:text>
        <pdf:table rect="{20,45},{169.5,215.5}" borderWidth="1.0" lineWidth="0.5" padding="1">
            <pdf:tr height="11.11">
            	<pdf:td width="15.5">当事人</pdf:td>
            	<pdf:td width="61.5" static="NO">{{ citizen.name }}</pdf:td>
            	<pdf:td width="18.8">车 型</pdf:td>
            	<pdf:td width="16.3" static="NO">{{ citizen.car_model }}</pdf:td>
            	<pdf:td width="19.8">车 号</pdf:td>
            	<pdf:td width="37.5" static="NO">{{ citizen.car_number }}</pdf:td>
            </pdf:tr>
            <pdf:tr height="11.1">
            	<pdf:td width="15.5">单 位</pdf:td>
            	<pdf:td width="96.2" static="NO">{{ citizen.org }}</pdf:td>
            	<pdf:td width="19.8">联系\n电话</pdf:td>
            	<pdf:td width="37.8" static="NO">{{ citizen.tel }}</pdf:td>
            </pdf:tr>
            <pdf:tr height="11.1">
            	<pdf:td width="15.5">案  发\n地  点</pdf:td>
            	<pdf:td width="96.2" static="NO">{{ case.place }}</pdf:td>
            	<pdf:td width="19.8">时 间</pdf:td>
            	<pdf:td width="37.8" textAlignment="left" static="NO">{{ case.date }}</pdf:td>
            </pdf:tr>
            <pdf:tr height="11">
