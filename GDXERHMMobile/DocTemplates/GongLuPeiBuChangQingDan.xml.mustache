            	<pdf:td width="61.2" textAlignment="center">项目名称</pdf:td>
            	<pdf:td width="18.8" textAlignment="center">规 格</pdf:td>
            	<pdf:td width="16.4" textAlignment="center">单 位</pdf:td>
            	<pdf:td width="20.1" textAlignment="center">数 量</pdf:td>
            	<pdf:td width="19.2" textAlignment="center">单价(元)</pdf:td>
            	<pdf:td width="18.2" textAlignment="center">金额(元)</pdf:td>
            </pdf:tr>
            {{! 赔补偿项目列表 }}
            {{#items}}
            <pdf:tr height="11.1">
            	<pdf:td width="15.5" >{{ .id }}</pdf:td>
                <pdf:td width="61.2" textAlignment="left" static="NO"><pdf:text point="mid-left:5,5.55">{{ .name }}</pdf:text></pdf:td>
            	<pdf:td width="18.8" static="NO">{{ .size }}</pdf:td>
            	<pdf:td width="16.4" static="NO">{{ .unit }}</pdf:td>
            	<pdf:td width="20.1" static="NO">{{ .quantity }}</pdf:td>
            	<pdf:td width="19.2" static="NO">{{ .unit_price }}</pdf:td>
            	<pdf:td width="18.2" static="NO">{{ .total_price }}</pdf:td>
            </pdf:tr>
            {{/items}}
            <pdf:tr height="11.1"><pdf:td width="169.5"></pdf:td></pdf:tr>
            <pdf:tr height="11.1">
            	<pdf:td width="15.5" textAlignment="center">合计</pdf:td>
            	<pdf:td width="153.8" textAlignment="center">
            		<pdf:text point="mid-left:1,5.55">人民币（大写）：</pdf:text>
            		<pdf:text point="mid-left:34,5.55" static="NO">{{ money.wan }}</pdf:text>
            		<pdf:text point="mid-left:43,5.55">万</pdf:text>
            		<pdf:text point="mid-left:49,5.55" static="NO">{{ money.qian }}</pdf:text>
            		<pdf:text point="mid-left:58,5.55">仟</pdf:text>
            		<pdf:text point="mid-left:64,5.55" static="NO">{{ money.bai }}</pdf:text>
            		<pdf:text point="mid-left:73,5.55">佰</pdf:text>
            		<pdf:text point="mid-left:79,5.55" static="NO">{{ money.shi }}</pdf:text>
            		<pdf:text point="mid-left:88,5.55">拾</pdf:text>
            		<pdf:text point="mid-left:94,5.55" static="NO">{{ money.yuan }}</pdf:text>
            		<pdf:text point="mid-left:103,5.55">元</pdf:text>
            		<pdf:text point="mid-left:109,5.55" static="NO">{{ money.jiao }}</pdf:text>
            		<pdf:text point="mid-left:118,5.55">角</pdf:text>
            		<pdf:text point="mid-left:124,5.55" static="NO">{{ money.fen }}</pdf:text>
            		<pdf:text point="mid-left:133,5.55">分</pdf:text>
                    <pdf:text point="mid-left:138,5.55" static="NO">{{ money.xiaoxie }}</pdf:text>
            	</pdf:td>
            </pdf:tr>
            <pdf:tr height="11.1">
            	<pdf:td width="15.5" textAlignment="center">备注</pdf:td>
            	<pdf:td width="153.8" textAlignment="left" static="NO"><pdf:text point="mid-left:5,5.55">{{ comment }}</pdf:text></pdf:td>
            </pdf:tr>
            <pdf:tr height="27">
                <pdf:td width="169.5" textAlignment="left">告知事项：\n1、路政案件处理地址：番禺区榄核镇番禺七号公路西二环高速公路榄核收费站出口右侧\n2、办公时间：周一至周五上午8:00-12:00；下午14:30-17:30；\n3、办公电话（传真）：020-34839206\n4、在交警结案前，应先办理路产赔（补）偿手续。</pdf:td>
            </pdf:tr>
        </pdf:table>
        <pdf:paragraph rect="{190,108},{5,35}" textAlignment="left">第一联：路政存档</pdf:paragraph>
        <pdf:text point="top-left:21,260.5">当事人（签名）：</pdf:text>
        <pdf:text point="top-left:105,260.5">经办人（签名）：</pdf:text>
	</pdf:content> 
</pdf:template>
